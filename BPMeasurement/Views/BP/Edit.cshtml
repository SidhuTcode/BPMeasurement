@model BloodMeasurement
@{
    string title = ViewBag.Action + " BP";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"
         class="text-danger">
    </div>

    <div class="form-group">
        <label asp-for="Systolic">Systolic</label>
        <input asp-for="Systolic" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Diastolic">Diastolic</label>
        <input asp-for="Diastolic" class="form-control">
    </div>
    

    <div class="form-group">
        <label asp-for="PositionId">Position</label>
        <select asp-for="PositionId" class="form-control">
            <option value="">select a genre</option>
            @foreach (Position g in ViewBag.Positions)
            {
                <option value="@g.PositionId">
                    @g.Name
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Date">Date of measurement</label>
        <input asp-for="Date" class="form-control">
    </div>
    <input type="hidden" asp-for="BPId" />

    <button type="submit" class="btn btn-primary">
        @ViewBag.Action
    </button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>